<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="找回密码"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <Spinner
            android:id="@+id/region"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:entries="@array/regioninfo"
            android:spinnerMode="dropdown" />

        <EditText
            android:id="@+id/numberFor"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@+id/region"
            android:autofillHints="phone"
            android:hint="请输入手机号码"
            android:inputType="phone" />

        <TextView
            android:id="@+id/temp21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numberFor"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:text="验证码:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/codeFor"
            android:layout_width="268dp"
            android:layout_height="50dp"
            android:layout_below="@+id/numberFor"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/temp21"
            android:hint="请输入验证码"
            android:inputType="number" />

        <Button
            android:id="@+id/getCodeFor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/codeFor"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:text="获取验证码" />

        <TextView
            android:id="@+id/temp22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/codeFor"
            android:layout_marginTop="25dp"
            android:text="请输入新密码"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/newpsw"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_below="@+id/codeFor"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/temp22"
            android:hint="密码"
            android:inputType="textPassword" />


        <Button
            android:id="@+id/ForgetFor"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/newpsw"
            android:layout_marginTop="50dp"
            android:background="#DF2242"
            android:enabled="false"
            android:text="找回密码"
            android:textColor="#ffff"
            android:textSize="20sp"
            android:typeface="sans" />

    </RelativeLayout>

</LinearLayout>
