<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="付款账户"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_getsender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这是转账人"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_payaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="111222333444555666"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


        <TextView
            android:id="@+id/tv_paymoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5000.00"
            android:textSize="25dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textSize="23sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收款人" />

        <TextView
            android:id="@+id/tv_receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收款人"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_getaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="666555444333222111"
            android:textSize="16dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注：" />

        <TextView
            android:id="@+id/tv_attachment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="这是一笔来自富婆的转账。"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转账时间：" />

        <TextView
            android:id="@+id/tv_getdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2021-12-27 10:37:59"
            android:textSize="16dp" />

    </LinearLayout>

</LinearLayout>